---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  ctaText?: string;
  ctaLink?: string;
  align?: 'center' | 'left';
  size?: 'medium' | 'large';
}

const { 
  title, 
  subtitle, 
  image, 
  ctaText, 
  ctaLink, 
  align = 'center', 
  size = 'medium' 
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const buttonText = ctaText || t('hero.cta');
const buttonLink = ctaLink || `/${lang}/contact`;

// Simple approach: just the image
const backgroundStyle = image ? `background-image: url(${image})` : '';
---

<section class:list={['hero', align, size, { 'has-image': !!image }]} style={backgroundStyle}>
  <div class="overlay"></div>
  <div class="content">
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}
    <a href={buttonLink} class="cta-button">{buttonText}</a>
  </div>
</section>

<style>
  .hero {
    position: relative;
    /* Warm golden background for pages without images */
    background: linear-gradient(
      135deg,
      rgba(212, 175, 119, 0.9) 0%,
      rgba(245, 220, 180, 0.85) 50%,
      rgba(212, 175, 119, 0.9) 100%
    );
    background-color: var(--color-gold);
    background-size: cover;
    background-position: center;
    color: white;
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero.medium {
    min-height: 400px;
  }

  .hero.large {
    min-height: 600px;
  }

  .hero.left {
    justify-content: flex-start;
    text-align: left;
  }

  .hero.center {
    text-align: center;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Gentle darkening for text legibility - lets image beauty shine */
    background: linear-gradient(
      135deg,
      rgba(155, 85, 57, 0.45) 0%,
      rgba(0, 0, 0, 0.35) 100%
    );
    z-index: 1;
    pointer-events: none;
  }
  
  /* When no image, use golden glow overlay */
  .hero:not(.has-image) .overlay {
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 70%
    );
  }

  .content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    width: 100%;
  }

  .hero.center .content {
    margin: 0 auto;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
    font-family: var(--font-family-serif);
    line-height: 1.2;
    color: white;
    text-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(155, 85, 57, 0.4);
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .subtitle {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    margin-bottom: 2rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 
      0 1px 4px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(155, 85, 57, 0.3);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    /* Vibrant terracotta with golden glow */
    background: linear-gradient(
      135deg,
      var(--color-orange) 0%,
      var(--color-orange-hover) 100%
    );
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.15rem;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 4px 16px rgba(155, 85, 57, 0.4),
      0 2px 8px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .cta-button:hover {
    background: linear-gradient(
      135deg,
      var(--color-gold) 0%,
      var(--color-orange) 100%
    );
    transform: translateY(-2px);
    box-shadow: 
      0 6px 20px rgba(155, 85, 57, 0.5),
      0 4px 12px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1.5rem;
    }
    
    .hero.large {
      min-height: 500px;
    }
  }
</style>
