---
import type { CollectionEntry } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
  post: CollectionEntry<'teachings'>;
}

const { post } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description, date, author } = post.data;

// Construct URL: /lang/teachings/slug-without-lang
const [postLang, ...slugParts] = post.slug.split('/');
const slug = slugParts.join('/');
const href = `/${postLang}/teachings/${slug}`;

const formattedDate = date.toLocaleDateString(lang === 'pl' ? 'pl-PL' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="teaching-card">
  <div class="content">
    <div class="meta">
      <span class="date">{formattedDate}</span>
      <span class="author">{author}</span>
    </div>
    <h3>
      <a href={href}>{title}</a>
    </h3>
    <p>{description}</p>
    <a href={href} class="read-more">
      {t('common.readMore')}
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
    </a>
  </div>
</article>

<style>
  .teaching-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #eee;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .teaching-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    border-color: var(--color-gold, #FFD700);
  }

  .content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .author {
    color: var(--color-orange, #FF6B00);
    font-weight: 500;
  }

  h3 {
    margin: 0 0 1rem 0;
    font-family: 'Cinzel', serif;
    font-size: 1.5rem;
    line-height: 1.3;
  }

  h3 a {
    color: var(--color-text, #333);
    text-decoration: none;
    transition: color 0.2s;
  }

  h3 a:hover {
    color: var(--color-orange, #FF6B00);
  }

  p {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-orange, #FF6B00);
    text-decoration: none;
    font-weight: bold;
    margin-top: auto;
    transition: gap 0.2s;
  }

  .read-more:hover {
    gap: 0.75rem;
  }
</style>
