---
import type { CollectionEntry } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
  post: CollectionEntry<'teachings'>;
}

const { post } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description, date, author } = post.data;

// Construct URL: /lang/teachings/slug-without-lang
const [postLang, ...slugParts] = post.slug.split('/');
const slug = slugParts.join('/');
const href = `/${postLang}/teachings/${slug}`;

const formattedDate = date.toLocaleDateString(lang === 'pl' ? 'pl-PL' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="teaching-card">
  <div class="content">
    <div class="meta">
      <span class="date">{formattedDate}</span>
      <span class="author">{author}</span>
    </div>
    <h3>
      <a href={href}>{title}</a>
    </h3>
    <p>{description}</p>
    <a href={href} class="read-more">
      {t('common.readMore')}
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
    </a>
  </div>
</article>

<style>
  .teaching-card {
    /* Warm gradient background */
    background: linear-gradient(
      135deg,
      rgba(255, 252, 247, 1) 0%,
      rgba(250, 248, 245, 1) 50%,
      rgba(255, 252, 247, 1) 100%
    );
     
    /* Softer organic corners */
    border-radius: 20px;
    
    /* Multi-layer depth */
    box-shadow: 
      0 4px 24px -4px var(--color-amber-glow),
      0 2px 12px -2px var(--color-terracotta-glow),
      inset 0 1px 3px rgba(255, 255, 255, 0.9),
      inset 0 -1px 2px rgba(212, 175, 119, 0.08);
     
    /* Warm border */
    border: 1px solid rgba(212, 175, 119, 0.25);
    
    /* Allow overflow for ornaments */
    overflow: visible;
    position: relative;
    
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .teaching-card:hover {
    transform: translateY(-4px);
    box-shadow: 
      0 6px 32px -4px rgba(230, 168, 104, 0.3),
      0 3px 16px -2px rgba(155, 85, 57, 0.15),
      inset 0 1px 3px rgba(255, 255, 255, 1),
      /* Golden aura on hover */
      0 0 0 2px rgba(212, 175, 119, 0.2);
    border-color: rgba(212, 175, 119, 0.4);
  }

  /* Paper texture overlay */
  .teaching-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 20px;
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(212, 175, 119, 0.025) 2px,
        rgba(212, 175, 119, 0.025) 4px
      );
    pointer-events: none;
    opacity: 0.7;
    z-index: 0;
  }

  /* Lotus petal ornament */
  .teaching-card::before {
    content: 'â€';
    position: absolute;
    top: 16px;
    right: 16px;
    color: var(--color-gold);
    opacity: 0.15;
    font-size: 1.4rem;
    transition: opacity 0.4s;
    pointer-events: none;
    z-index: 1;
  }
  
  .teaching-card:hover::before {
    opacity: 0.3;
  }

  /* Ensure content stays above texture */
  .teaching-card > * {
    position: relative;
    z-index: 1;
  }

  .content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .author {
    color: var(--color-orange);
    font-weight: 500;
  }

  h3 {
    margin: 0 0 1rem 0;
    font-family: var(--font-family-serif);
    font-size: 1.5rem;
    line-height: 1.3;
  }

  h3 a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }

  h3 a:hover {
    color: var(--color-orange);
  }

  p {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-orange);
    text-decoration: none;
    font-weight: bold;
    margin-top: auto;
    transition: gap 0.2s;
  }

  .read-more:hover {
    gap: 0.75rem;
  }
</style>
