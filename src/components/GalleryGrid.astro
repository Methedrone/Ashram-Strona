---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import SectionHeading from './SectionHeading.astro';

interface ImageItem {
  src: string;
  alt: string;
}

interface Props {
  images?: ImageItem[];
  limit?: number;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const defaultImages: ImageItem[] = [
  { src: '/images/gallery/ashram-courtyard-garden-archway.webp', alt: 'Ashram courtyard with brick archway and garden' },
  { src: '/images/gallery/sacred-temple-room-candles-altar.webp', alt: 'Sacred temple room with altar, candles and rugs' },
  { src: '/images/gallery/havan-procession-woman-offerings.webp', alt: 'Woman in yellow sari carrying offerings during Aarti procession' },
  { src: '/images/gallery/vegetable-garden-leeks-organic.webp', alt: 'Row of leeks in ashram organic garden' },
  { src: '/images/gallery/temple-room-babaji-portrait-altar.webp', alt: 'Meditation room with Babaji portrait on altar' },
  { src: '/images/gallery/autumn-meadow-mountains-golden-grass.webp', alt: 'Autumn meadow with view of Golden Mountains' },
];

const { images = defaultImages, limit } = Astro.props;
const displayImages = limit ? images.slice(0, limit) : images;
---

<section class="gallery-grid">
  <SectionHeading title={t('nav.gallery')} />
  
  <div class="grid">
    {displayImages.map((image) => (
      <div class="gallery-item">
        <img src={image.src} alt={image.alt} loading="lazy" width="800" height="600" />
        <div class="overlay">
          <span>{image.alt}</span>
        </div>
      </div>
    ))}
  </div>
  
  {limit && limit < images.length && (
    <div class="view-all">
      <a href={`/${lang}/gallery`} class="view-all-btn">
        {t('gallery.viewAll')}
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
      </a>
    </div>
  )}
</section>

<style>
  .gallery-grid {
    padding: 4rem 2rem;
    background-color: var(--color-bg);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-item {
    position: relative;
    border-radius: 16px;
    
    /* Thicker border for mat effect */
    border: 4px solid rgba(212, 175, 119, 0.35);
    padding: 10px;
    
    /* Warm papyrus mat background */
    background: linear-gradient(
      135deg,
      rgba(255, 252, 247, 1) 0%,
      rgba(250, 248, 245, 1) 100%
    );
    
    /* Enhanced golden frame shadow */
    box-shadow: 
      0 4px 24px -4px rgba(230, 168, 104, 0.28),
      0 2px 12px -2px rgba(155, 85, 57, 0.18),
      inset 0 1px 3px rgba(255, 255, 255, 0.9),
      inset 0 -1px 2px rgba(212, 175, 119, 0.1);
    
    aspect-ratio: 4/3;
    cursor: pointer;
    transition: all 0.4s ease;
    overflow: visible;
  }

  /* Floral ornament */
  .gallery-item::before {
    content: '‚ùÄ';
    position: absolute;
    top: 8px;
    right: 8px;
    color: var(--color-gold, #D4AF77);
    opacity: 0.12;
    font-size: 1.2rem;
    pointer-events: none;
    z-index: 1;
    transition: opacity 0.4s;
  }
  
  .gallery-item:hover::before {
    opacity: 0.25;
  }

  .gallery-item:hover {
    border-color: rgba(212, 175, 119, 0.5);
    transform: translateY(-3px);
    
    /* Golden aura on hover */
    box-shadow: 
      0 6px 32px -4px rgba(230, 168, 104, 0.35),
      0 3px 16px -2px rgba(155, 85, 57, 0.2),
      inset 0 1px 3px rgba(255, 255, 255, 1),
      0 0 0 2px rgba(212, 175, 119, 0.3);
  }

  .gallery-item img {
    border-radius: 10px;
    /* Ensure image fits within mat */
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover img {
    opacity: 0.9;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    background: linear-gradient(to top, rgba(155, 85, 57, 0.5), transparent);
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    font-size: 0.9rem;
    font-weight: 500;
    text-shadow: 0 1px 3px rgba(60, 40, 20, 0.5); /* Warm dark text shadow */
  }

  .gallery-item:hover .overlay {
    opacity: 1;
  }

  .view-all {
    text-align: center;
    margin-top: 3rem;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(
      135deg,
      var(--color-orange) 0%,
      var(--color-orange-hover) 100%
    );
    color: white;
    padding: 0.85rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 3px 12px rgba(155, 85, 57, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .view-all-btn:hover {
    background: linear-gradient(
      135deg,
      var(--color-gold) 0%,
      var(--color-orange) 100%
    );
    transform: translateY(-2px);
    box-shadow: 
      0 5px 16px rgba(155, 85, 57, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    /* Candlelight glow animation */
    animation: candlelight 2s ease-in-out infinite;
  }
</style>
