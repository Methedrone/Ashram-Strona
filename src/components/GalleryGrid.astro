---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import SectionHeading from './SectionHeading.astro';

import { LightGallery } from 'astro-lightgallery';

interface ImageItem {
  src: string;
  alt: string;
  subHtml?: string;
  srcThumb?: string;
  loading?: 'lazy' | 'eager';
}

interface Props {
  images?: ImageItem[];
  limit?: number;
  title?: string;
  hideTitle?: boolean;
  emptyStateText?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const defaultImages: ImageItem[] = [
  { src: '/images/gallery/ashram-courtyard-garden-archway.webp', srcThumb: '/images/optimized/gallery/ashram-courtyard-garden-archway-w480.webp', alt: 'Ashram courtyard with brick archway and garden', subHtml: 'Ashram courtyard and garden', loading: 'lazy' },
  { src: '/images/gallery/sacred-temple-room-candles-altar.webp', srcThumb: '/images/optimized/gallery/sacred-temple-room-candles-altar-w480.webp', alt: 'Sacred temple room with altar, candles and rugs', subHtml: 'Temple interior', loading: 'lazy' },
  { src: '/images/gallery/havan-procession-woman-offerings.webp', srcThumb: '/images/optimized/gallery/havan-procession-woman-offerings-w480.webp', alt: 'Woman in yellow sari carrying offerings during Aarti procession', subHtml: 'Aarti ceremony', loading: 'lazy' },
  { src: '/images/gallery/vegetable-garden-leeks-organic.webp', srcThumb: '/images/optimized/gallery/vegetable-garden-leeks-organic-w480.webp', alt: 'Row of leeks in ashram organic garden', subHtml: 'Ashram vegetable garden', loading: 'lazy' },
  { src: '/images/gallery/temple-room-babaji-portrait-altar.webp', srcThumb: '/images/optimized/gallery/temple-room-babaji-portrait-altar-w480.webp', alt: 'Meditation room with Babaji portrait on altar', subHtml: 'Altar with Babaji portrait', loading: 'lazy' },
  { src: '/images/gallery/autumn-meadow-mountains-golden-grass.webp', srcThumb: '/images/optimized/gallery/autumn-meadow-mountains-golden-grass-w480.webp', alt: 'Autumn meadow with view of Golden Mountains', subHtml: 'View of Golden Mountains', loading: 'lazy' },
];

const { images = defaultImages, limit, title, hideTitle = false, emptyStateText } = Astro.props;
const displayImages = limit ? images.slice(0, limit) : images;
---

<section class="gallery-grid">
  {!hideTitle && <SectionHeading title={title || t('nav.gallery')} />}
  
  <div class="gallery-container">
    {displayImages.length > 0 ? (
      <LightGallery
        layout={{
          imgs: displayImages,
          classItem: 'gallery-item'
        }}
        options={{
          thumbnail: true,
          preload: 1,
          // @ts-ignore - requested by prompt but not in types
          lazyLoad: true
        }}
      />
    ) : (
      <div class="empty-state">
        <div class="empty-icon">❀</div>
        <h3>{emptyStateText || t('gallery.empty')}</h3>
        <p>{t('gallery.comingSoon')}</p>
      </div>
    )}
  </div>
  {limit && limit < images.length && (
    <div class="view-all">
      <a href={lang === 'pl' ? '/gallery' : '/en/gallery'} class="view-all-btn">
        {t('gallery.viewAll')}
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
      </a>
    </div>
  )}
</section>

<style>
  .gallery-grid {
    padding: 4rem 2rem;
    background-color: var(--color-bg);
  }

  .gallery-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-item {
    position: relative;
    border-radius: 16px;
    
    /* Thicker border for mat effect */
    border: 4px solid rgba(212, 175, 119, 0.35);
    padding: 10px;
    
    /* Warm papyrus mat background */
    background: linear-gradient(
      135deg,
      rgba(255, 252, 247, 1) 0%,
      rgba(250, 248, 245, 1) 100%
    );
    
    /* Enhanced golden frame shadow */
    box-shadow: 
      0 4px 24px -4px rgba(230, 168, 104, 0.28),
      0 2px 12px -2px rgba(155, 85, 57, 0.18),
      inset 0 1px 3px rgba(255, 255, 255, 0.9),
      inset 0 -1px 2px rgba(212, 175, 119, 0.1);
    
    cursor: pointer;
    transition: all 0.4s ease;
    overflow: hidden;
    display: block;
    text-decoration: none;
  }

  /* Floral ornament */
  .gallery-item::before {
    content: '❀';
    position: absolute;
    top: 8px;
    right: 8px;
    color: var(--color-gold, #D4AF77);
    opacity: 0.12;
    font-size: 1.2rem;
    pointer-events: none;
    z-index: 1;
    transition: opacity 0.4s;
  }
  
  .gallery-item:hover::before {
    opacity: 0.25;
  }

  .gallery-item:hover {
    border-color: rgba(212, 175, 119, 0.5);
    transform: translateY(-3px);
    
    /* Golden aura on hover */
    box-shadow: 
      0 6px 32px -4px rgba(230, 168, 104, 0.35),
      0 3px 16px -2px rgba(155, 85, 57, 0.2),
      inset 0 1px 3px rgba(255, 255, 255, 1),
      0 0 0 2px rgba(212, 175, 119, 0.3);
  }

  .gallery-item img {
    border-radius: 10px;
    /* Ensure image fits within mat */
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover img {
    opacity: 0.9;
  }

  /* Removed overlay since LightGallery handles captions in lightbox */

  .view-all {
    text-align: center;
    margin-top: 3rem;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(
      135deg,
      var(--color-orange) 0%,
      var(--color-orange-hover) 100%
    );
    color: white;
    padding: 0.85rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 3px 12px rgba(155, 85, 57, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .view-all-btn:hover {
    background: linear-gradient(
      135deg,
      var(--color-gold) 0%,
      var(--color-orange) 100%
    );
    transform: translateY(-2px);
    box-shadow: 
      0 5px 16px rgba(155, 85, 57, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    /* Candlelight glow animation */
    animation: candlelight 2s ease-in-out infinite;
  }

  .empty-state {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    background: linear-gradient(135deg, rgba(255,252,247,0.8) 0%, rgba(250,248,245,0.8) 100%);
    border: 2px dashed rgba(212, 175, 119, 0.4);
    border-radius: 16px;
    box-shadow: inset 0 0 20px rgba(230, 168, 104, 0.1);
  }

  .empty-icon {
    font-size: 3rem;
    color: var(--color-gold);
    opacity: 0.5;
    margin-bottom: 1rem;
    animation: pulse 4s infinite ease-in-out;
  }

  .empty-state h3 {
    font-family: var(--font-family-serif);
    font-size: 1.8rem;
    color: var(--color-text-warm);
    margin: 0 0 0.5rem 0;
  }

  .empty-state p {
    color: var(--color-text-light);
    font-size: 1.1rem;
    max-width: 400px;
    margin: 0;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
  }
</style>
