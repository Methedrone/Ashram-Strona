---
import Layout from '../../layouts/Layout.astro';
import GalleryGrid from '../../components/GalleryGrid.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const galleryImages = [
  { src: '/images/gallery/ashram-courtyard-garden-archway.webp', alt: 'Ashram courtyard with brick archway and garden', caption: 'Ashram courtyard and garden' },
  { src: '/images/gallery/winter-landscape-sunset-snow-hills.webp', alt: 'Winter landscape with snowy hills at sunset', caption: 'Winter landscape around the ashram' },
  { src: '/images/gallery/sacred-temple-room-candles-altar.webp', alt: 'Sacred temple room with altar, candles and rugs', caption: 'Temple interior' },
  { src: '/images/gallery/aarti-procession-woman-offerings.webp', alt: 'Woman in yellow sari carrying offerings during Aarti procession', caption: 'Aarti ceremony' },
  { src: '/images/gallery/sunset-trees-silhouette-twilight.webp', alt: 'Sunset with tree silhouettes in ashram gardens', caption: 'Sunset in the garden' },
  { src: '/images/gallery/vegetable-garden-leeks-organic.webp', alt: 'Row of leeks in ashram organic garden', caption: 'Ashram vegetable garden' },
  { src: '/images/gallery/meditation-room-babaji-portrait-altar.webp', alt: 'Meditation room with Babaji portrait on altar', caption: 'Altar with Babaji portrait' },
  { src: '/images/gallery/autumn-meadow-mountains-golden-grass.webp', alt: 'Autumn meadow with view of Golden Mountains', caption: 'View of Golden Mountains' },
  { src: '/images/gallery/havan-ceremony-fire-pit-devotees.webp', alt: 'Havan fire ceremony with devotees in mountain shelter', caption: 'Havan ceremony' },
  { src: '/images/gallery/temple-interior-altar-shiva-parvati.webp', alt: 'Temple interior with altar and deity statues', caption: 'Altar in the temple' },
  { src: '/images/gallery/winter-road-snow-covered-trees-tractor.webp', alt: 'Winter road among snow-covered trees', caption: 'Winter road near the ashram' },
  { src: '/images/gallery/babaji-with-devotees-vintage.webp', alt: 'Sri Haidakhan Babaji with devotees at ashram construction site', caption: 'Babaji with devotees' },
];
---

<Layout title={t('nav.gallery')} description={t('meta.gallery.description')}>
  <div class="gallery-page">
    <div class="container">
      <div class="intro">
        <SectionHeading title="Photo Gallery" subtitle="Welcome to view photos of our Ashram life, ceremonies and beautiful surroundings." level={1} />
      </div>
      
      <GalleryGrid images={galleryImages} />
    </div>
  </div>
</Layout>

<style>
  .gallery-page {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .intro {
    text-align: center;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    font-family: var(--font-family-serif);
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-orange);
  }

  p {
    font-size: 1.2rem;
    color: var(--color-text-light);
  }
</style>
