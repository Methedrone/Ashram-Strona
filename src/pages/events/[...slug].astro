---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';
import Breadcrumb from '../../components/Breadcrumb.astro';

export async function getStaticPaths() {
  const events = await getCollection('events', ({ data }) => {
    return data.lang === 'pl';
  });
  
  return events.map(entry => {
    const [lang, ...slugParts] = entry.slug.split('/');
    const slug = slugParts.join('/');
    return {
      params: { slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const lang = 'pl';
const t = useTranslations(lang);

const breadcrumbItems = [
  { label: t('nav.home'), href: '/pl' },
  { label: t('nav.events'), href: '/pl/events' },
  { label: entry.data.title },
];

const formattedDate = entry.data.date.toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  weekday: 'long',
});

const shareUrl = encodeURIComponent(Astro.url.href);
const shareTitle = encodeURIComponent(entry.data.title);
---

<Layout title={entry.data.title} description={entry.data.description} schema={{
  "@type": "Event",
  "name": entry.data.title,
  "startDate": entry.data.date.toISOString(),
  "location": {
    "@type": "Place",
    "name": entry.data.location,
    "address": {
      "@type": "PostalAddress",
      "addressLocality": entry.data.location,
      "addressCountry": "PL"
    }
  },
  "organizer": {
    "@type": "ReligiousOrganization",
    "name": "Ashram Babaji",
    "url": "https://babaji.org.pl"
  },
  "inLanguage": "pl",
  "url": `https://babaji.org.pl/pl/events/${entry.slug.split('/').slice(1).join('/')}`
}}>
  <article class="event-detail">
    <div class="container">
      <header class="event-header">
        <Breadcrumb items={breadcrumbItems} />
        <a href="/pl/events" class="back-link">
          <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
          {t('common.back')}
        </a>
        
        <div class="date-badge">
          {formattedDate}
        </div>
        
        <h1>{entry.data.title}</h1>
        
        <div class="meta">
          <div class="meta-item">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            <span>{entry.data.location}</span>
          </div>
        </div>
      </header>
      
      <div class="content">
        <Content />
      </div>

      <div class="share-buttons">
        <h3>{t('share.title')}</h3>
        <div class="buttons">
          <a href={`mailto:?subject=${shareTitle}&body=${shareUrl}`} class="btn-secondary share-btn">
            {t('share.email')}
          </a>
          <a href={`https://wa.me/?text=${shareTitle}%20${shareUrl}`} target="_blank" rel="noopener noreferrer" class="btn-secondary share-btn">
            {t('share.whatsapp')}
          </a>
        </div>
      </div>
      
      <div class="cta-section">
        <h3>Zainteresowany udziałem?</h3>
        <p>Skontaktuj się z nami, aby zarezerwować miejsce lub dowiedzieć się więcej.</p>
        <a href="/pl/contact" class="btn-primary">Skontaktuj się</a>
      </div>
    </div>
  </article>
</Layout>

<style>
  .event-detail {
    padding: 4rem 0;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .event-header {
    margin-bottom: 3rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .event-header :global(.breadcrumb) {
    align-self: flex-start;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-light);
    text-decoration: none;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    align-self: flex-start;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-orange);
  }

  .date-badge {
    background-color: var(--color-orange);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: bold;
    margin-bottom: 1.5rem;
    text-transform: capitalize;
  }

  h1 {
    font-family: var(--font-family-serif);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .meta {
    display: flex;
    gap: 2rem;
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .content {
    line-height: 1.8;
    font-size: 1.1rem;
    color: var(--color-text);
    margin-bottom: 4rem;
  }

  .content :global(h2) {
    font-family: var(--font-family-serif);
    font-size: 1.8rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(ul) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .share-buttons {
    margin-bottom: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .share-buttons h3 {
    font-family: var(--font-family-serif);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .share-btn {
    min-width: 140px;
  }

  .cta-section {
    background-color: var(--color-bg-alt);
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
    border: 1px solid var(--color-border);
  }

  .cta-section h3 {
    font-family: var(--font-family-serif);
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--color-orange);
  }

    .cta-section p {
    margin-bottom: 2rem;
    color: var(--color-text-light);
  }
</style>
