---
import Layout from '../layouts/Layout.astro';
import GalleryGrid from '../components/GalleryGrid.astro';
import SectionHeading from '../components/SectionHeading.astro';
import { useTranslations } from '../i18n/utils';

const lang = 'pl';
const t = useTranslations(lang);

const galleryImages = [
  { src: '/images/gallery/ashram-courtyard-garden-archway.webp', alt: 'Dziedziniec aszramu z ceglanym przejściem i ogrodem', caption: 'Dziedziniec aszramu z ogrodem' },
  { src: '/images/gallery/winter-landscape-sunset-snow-hills.webp', alt: 'Zimowy krajobraz ze śnieżnymi wzgórzami o zachodzie słońca', caption: 'Zimowy krajobraz wokół aszramu' },
  { src: '/images/gallery/sacred-temple-room-candles-altar.webp', alt: 'Świątynia z ołtarzem, świece i dywany', caption: 'Wnętrze świątyni' },
  { src: '/images/gallery/aarti-procession-woman-offerings.webp', alt: 'Kobieta w żółtym sari niosąca ofiary podczas procesji Aarti', caption: 'Ceremonia Aarti' },
  { src: '/images/gallery/sunset-trees-silhouette-twilight.webp', alt: 'Zachód słońca z sylwetkami drzew w ogrodzie aszramu', caption: 'Zachód słońca w ogrodzie' },
  { src: '/images/gallery/vegetable-garden-leeks-organic.webp', alt: 'Rząd pora w organicznym ogrodzie aszramu', caption: 'Ogród warzywny aszramu' },
  { src: '/images/gallery/meditation-room-babaji-portrait-altar.webp', alt: 'Pokój medytacyjny z portretem Babaji na ołtarzu', caption: 'Ołtarz z portretem Babaji' },
  { src: '/images/gallery/autumn-meadow-mountains-golden-grass.webp', alt: 'Jesienna łąka z widokiem na Góry Złote', caption: 'Widok na Góry Złote' },
  { src: '/images/gallery/havan-ceremony-fire-pit-devotees.webp', alt: 'Ceremonia Havan z ogniem i uczestnikami w górskim schronisku', caption: 'Ceremonia Havan' },
  { src: '/images/gallery/temple-interior-altar-shiva-parvati.webp', alt: 'Wnętrze świątyni z ołtarzem i statuetkami bożków', caption: 'Ołtarz w świątyni' },
  { src: '/images/gallery/winter-road-snow-covered-trees-tractor.webp', alt: 'Zimowa droga wśród zaśnieżonych drzew', caption: 'Zimowa droga w okolicy aszramu' },
  { src: '/images/gallery/babaji-with-devotees-vintage.webp', alt: 'Śri Haidakhan Babaji z wyznawcami na budowie aszramu', caption: 'Babaji z wyznawcami' },
];
---

<Layout title={t('nav.gallery')} description={t('meta.gallery.description')}>
  <div class="gallery-page">
    <div class="container">
      <div class="intro">
        <SectionHeading title="Galeria Zdjęć" subtitle="Zapraszamy do obejrzenia zdjęć z życia naszego Ashramu, ceremonii i pięknej okolicy." level={1} />
      </div>
      
      <GalleryGrid images={galleryImages} />
    </div>
  </div>
</Layout>

<style>
  .gallery-page {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .intro {
    text-align: center;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    font-family: var(--font-family-serif);
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-orange);
  }

  p {
    font-size: 1.2rem;
    color: var(--color-text-light);
  }
</style>
