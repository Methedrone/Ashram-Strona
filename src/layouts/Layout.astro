---
import { SEO } from 'astro-seo';
import { getLangFromUrl, useTranslations, translatePath } from '../i18n/utils';
import Schema from '../components/Schema.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogImageAlt?: string;
  ogType?: string;
  schema?: Record<string, any>;
  noIndex?: boolean;
}

const {
  title,
  description: customDescription,
  ogImage,
  ogImageAlt,
  ogType = 'website',
  schema,
  noIndex = false
} = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const siteUrl = 'https://babaji.org.pl';
const pageUrl = new URL(Astro.url.pathname, siteUrl).href;
const description = customDescription || t('common.description');
const currentPath = Astro.url.pathname;
const robotsExtras = 'max-image-preview:large, max-snippet:-1, max-video-preview:-1';

// Generate hreflang alternate URLs
const alternateLocales: ('pl' | 'en')[] = ['pl', 'en'];
const hreflangs = alternateLocales.map((locale) => ({
  locale,
  url: `${siteUrl}${translatePath(currentPath, lang, locale)}`
}));

// OG image with default fallback
const ogImageUrl = ogImage ? `${siteUrl}${ogImage}` : `${siteUrl}/images/havan-ceremony-group-fire-offerings.webp`;
const gtagSnippet = `
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-QPJ40KK4Z4');
`;

const defaultSchema: Record<string, any> = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "ReligiousOrganization",
      "name": "Ashram Babaji",
      "alternateName": "Ashram Haidakhan Babaji",
      "url": siteUrl,
      "logo": `${siteUrl}/favicon.svg`,
      "image": `${siteUrl}/images/havan-ceremony-group-fire-offerings.webp`,
      "description": "Spiritual retreat center following the teachings of Haidakhan Babaji, offering programs in karma yoga, kriya yoga, and traditional ceremonies.",
      "foundingDate": "1990",
      "sameAs": [
        "https://www.facebook.com/haidakhandisevadham.polska.9"
      ],
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Mąkolno 129",
        "addressLocality": "Mąkolno",
        "postalCode": "57-250",
        "addressRegion": "Dolnośląskie",
        "addressCountry": "PL"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "50.5297",
        "longitude": "16.9567"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+48 536 555 899",
        "email": "mimohan44@gmail.com",
        "contactType": "customer service",
        "availableLanguage": ["Polish", "English"]
      },
      "areaServed": "Europe"
    },
    {
      "@type": "WebSite",
      "name": "Ashram Babaji",
      "url": siteUrl
    }
  ]
};

const schemaOrg: Record<string, any> = { ...defaultSchema };
if (schema) {
  if (schema['@graph']) {
    schemaOrg['@graph'].push(...schema['@graph']);
  } else {
    schemaOrg['@graph'].push(schema);
  }
}
---

<!doctype html>
<html lang={lang}>
	<head>
		<!-- Google Tag Manager -->
		<script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window,document,'script','dataLayer','GTM-5J4NL66W');</script>
		<!-- End Google Tag Manager -->
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-QPJ40KK4Z4"></script>
		<script set:html={gtagSnippet} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="manifest" href="/manifest.json" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Work+Sans:wght@300;400;500;600&display=swap" rel="stylesheet" />

        <SEO
          title={title}
          titleTemplate="%s | Ashram Babaji"
          description={description}
          canonical={pageUrl}
          noindex={noIndex}
          robotsExtras={robotsExtras}
          languageAlternates={hreflangs.map(({ locale, url }) => ({ href: url, hrefLang: locale }))}
          openGraph={{
            basic: {
              title: `${title} | Ashram Babaji`,
              type: ogType,
              image: ogImageUrl,
              url: pageUrl,
            },
            optional: {
              description,
              locale: lang === 'pl' ? 'pl_PL' : 'en_US',
              localeAlternate: alternateLocales.filter(l => l !== lang).map(l => (l === 'pl' ? 'pl_PL' : 'en_US')),
              siteName: 'Ashram Babaji',
            },
            image: {
              alt: ogImageAlt || `${title} - Ashram Babaji`,
              width: 1200,
              height: 630,
            },
          }}
          twitter={{
            card: 'summary_large_image',
            title: `${title} | Ashram Babaji`,
            description,
            image: ogImageUrl,
            imageAlt: ogImageAlt || `${title} - Ashram Babaji`,
          }}
          extend={{
            link: [
              {
                rel: 'alternate',
                href: hreflangs[0].url,
                hreflang: 'x-default',
              },
              {
                rel: 'sitemap',
                href: '/sitemap-index.xml',
              },
            ],
          }}
          removeTrailingSlashForRoot
        />

        <Schema schema={schemaOrg} />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript is:inline><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5J4NL66W"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		<a href="#main-content" class="skip-link">{t('common.skipToContent')}</a>
		<Header activePath={currentPath} />
		<main id="main-content" tabindex="-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>
